<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nickolas.ownweather.WeatherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="#1ca8f4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weatherDay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center"
                android:text="Today"
                android:textSize="22sp"
                android:textColor="#FFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/weatherDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center"
                android:textColor="#FFFF"
                android:text="June 24"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/max_temperature_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="bottom|center"
                android:textColor="#FFFF"
                android:text="21°"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/min_temperature_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="top|center"
                android:textColor="#FFFF"
                android:text="8°"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weatherStateImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                app:srcCompat="@drawable/sunny" />

            <TextView
                android:id="@+id/weatherState"
                android:layout_width="match_parent"
                android:textColor="#FFFF"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|center"
                android:text="Clear"
                android:textSize="26sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/day_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="@string/day_temp"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/min_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="@string/min_temperature"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/max_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="@string/max_temperature"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/night_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="@string/night_temperature"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/morn_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="@string/morning_temperature"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/evening_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="@string/evening_temperature"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="@string/humidity"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="@string/presure"
        android:textSize="22dp" />
</LinearLayout>
